{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "lib": ["ES2022"],
      "module": "ES2022",
      "moduleResolution": "node",
      "target": "ES2022",
      "resolveJsonModule": true,
      "rootDir": "src",
      "outDir": "build",
      "esModuleInterop": true,
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "**/*.test.ts",
    ]
}
